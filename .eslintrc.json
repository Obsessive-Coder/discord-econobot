{
  "env": {
      "browser": false,
      "commonjs": true,
      "es2021": true
  },
  "extends": [
      "airbnb-base"
  ],
  "overrides": [
      {
          "files": [
              "**/*.test.js"
          ],
          "env": {
              "jest": true
          }
      }
  ],
  "parserOptions": {
      "ecmaVersion": 12
  },
  "rules": {
      "arrow-parens": ["error", "as-needed"],
      "linebreak-style": ["error", "windows"],
      "import/extensions": ["off"],
      "no-plusplus": ["off"]
  }
}
